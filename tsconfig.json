{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "screens/*": [
        "./src/screens/*"
      ],
      "@/assets/*": [
        "./src/assets/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./src/**/*.tsx",
    "./src/**/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}